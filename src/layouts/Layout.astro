---
import '../styles/global.css';
import Nav from '../components/Nav.tsx';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

export interface Props {
	title: string;
}

const { title } = Astro.props;
const pageTitle = title ? `${title} - TukuyLabs` : 'TukuyLabs';
---

<!doctype html>
<html lang='es'>
	<head>
		<script
			async
			is:inline
			type='text/partytown'
			src='https://www.googletagmanager.com/gtag/js?id=G-NC53CTX6LN'
		></script>
		<script is:inline type='text/partytown'>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag('js', new Date());

			gtag('config', 'G-NC53CTX6LN');
		</script>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<link
			rel='icon'
			type='image/png'
			href='/favicon-96x96.png'
			sizes='96x96'
		/>
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<link rel='shortcut icon' href='/favicon.ico' />
		<link
			rel='apple-touch-icon'
			sizes='180x180'
			href='/apple-touch-icon.png'
		/>
		<meta name='apple-mobile-web-app-title' content='TukuyLabs' />
		<link rel='manifest' href='/site.webmanifest' />
		<link rel='sitemap' href='/sitemap-index.xml' />
		<meta
			name='description'
			content='TukuyLabs - Innovación & Tecnología'
		/>
		<title>{pageTitle}</title>
		<!-- Google tag (gtag.js) -->

		<ClientRouter />
	</head>
	<body>
		<Nav client:load />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
